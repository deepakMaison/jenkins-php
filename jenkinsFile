pipeline {
    agent any
    environment {
        projectName = "test-project"
    }

stages {
    stage ("sonarjenkins") {
       steps {
          withEnv(["PATH=/usr/bin:/usr/local/jdk-11.0.2/bin:/home/ubuntu/sonarqube-8.9.10.61524/bin/"]) {
              withSonarQubeEnv('sonarjenkins'){ 
               sh "sonar-scanner \
                 -Dsonar.projectKey=${projectName} \
                 -Dsonar.sources=. \
                 -Dsonar.host.url=${env.SONAR_HOST_URL} \
                 -Dsonar.login=${env.SONAR_AUTH_TOKEN} \
                 -Dsonar.projectName=${projectName} \
                 -Dsonar.projectVersion=${env.BUILD_ID}"
           }
         }
       }
     }

